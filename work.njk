<section class="showreel">
    <iframe src="https://player.vimeo.com/video/713605621" width="640" height="360" frameborder="0"
    allow="autoplay; fullscreen" allowfullscreen="allowfullscreen"></iframe>
</section>


<section class="work">
    <h2>Work + Projects</h2>

    <section class="project-grid">
        {% for project in projects.projects %}
        <div class="project">
            <img class="project-img" src="{{ project.static_image }}" alt="{{ project.title }}">
            <header>
                <h3 class="project-title">{{ project.title }}</h3>
                <div class="date">{{ project.date }}</div>
            </header>

            <div class="additional-content">
                <div class="interactive">
                    <div class="img-hover">
                        <img class="project-img" src="{{ project.animated_image }}" alt="{{ project.title }}">
                    </div>
                    <header>
                        <h3 class="project-title">{{ project.title }}</h3>
                        <div class="date">{{ project.date }}</div>
                    </header>

                    <div class="description">
                        {{ project.description | safe }}
                    </div>
                    <div class="tags">
                        {% for tag in project.tags %}
                        <div class="tag {{ tag }}">{{ projects.tagMapping[tag] or tag }}</div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </section>
</section>